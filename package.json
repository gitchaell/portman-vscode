{
	"name": "portman",
	"displayName": "Portman",
	"description": "Manage processes/ports running on your computer.",
	"version": "1.0.0",
	"author": "Michaell Alavedra",
	"publisher": "Michaell Alavedra",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/gitchaell/portman-vscode"
	},
	"homepage": "https://github.com/gitchaell/portman-vscode",
	"keywords": [
		"ports",
		"running",
		"kill",
		"administration",
		"development",
		"utilities",
		"tools"
	],
	"pricing": "Free",
	"engines": {
		"vscode": "^1.81.0"
	},
	"categories": [
		"Visualization",
		"Other"
	],
	"icon": "./assets/logo.png",
	"main": "./dist/extension.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "portman.refresh",
				"title": "Portman: Refresh",
				"icon": "$(debug-restart)"
			},
			{
				"command": "portman.kill",
				"title": "Portman: Kill Process",
				"icon": "$(debug-stop)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "portman-view",
					"title": "Portman",
					"icon": "assets/icon.svg"
				}
			],
			"panel": [
				{
					"id": "portman-view",
					"title": "Portman",
					"icon": "assets/icon.svg"
				}
			]
		},
		"views": {
			"portman-view": [
				{
					"id": "portman",
					"name": "Portman",
					"contextualTitle": "Portman",
					"visibility": "visible",
					"icon": "assets/icon.svg"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "portman",
				"contents": "No running process found.\n[Refresh](command:portman.refresh)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "portman.refresh",
					"when": "view == portman",
					"group": "navigation"
				},
				{
					"command": "portman.refresh",
					"when": "view == portman"
				}
			],
			"view/item/context": [
				{
					"command": "portman.kill",
					"when": "view == portman",
					"group": "inline"
				},
				{
					"command": "portman.kill",
					"when": "view == portman"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir dist",
		"watch-tests": "tsc -p . -w --outDir dist",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./dist/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@types/vscode": "^1.81.0",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vscode/test-electron": "^2.3.2",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"ts-loader": "^9.4.3",
		"typescript": "^5.1.3",
		"webpack": "^5.85.0",
		"webpack-cli": "^5.1.1"
	}
}
